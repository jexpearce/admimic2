{
  "name": "@motif/react",
  "version": "0.1.0",
  "description": "Headless React bindings for Motif",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@motif/schema": "workspace:*",
    "@motif/primitives": "workspace:*",
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "typescript": "^5.5.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
} 